{
  "info": {
    "name": "Tour Payment API",
    "_postman_id": "payment-api-collection",
    "description": "API collection để test chức năng thanh toán tour",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "tour_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "booking_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "payment_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "service_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('access_token', jsonData.data.accessToken);",
                  "    console.log('Access token saved:', jsonData.data.accessToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"0901234567\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Tours",
      "item": [
        {
          "name": "Get All Tours",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data.tours && jsonData.data.tours.length > 0) {",
                  "        pm.collectionVariables.set('tour_id', jsonData.data.tours[0]._id);",
                  "        console.log('Tour ID saved:', jsonData.data.tours[0]._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tours",
              "host": ["{{base_url}}"],
              "path": ["api", "tours"]
            }
          },
          "response": []
        },
        {
          "name": "Get Tour Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tours/{{tour_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "tours", "{{tour_id}}"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Additional Services",
      "item": [
        {
          "name": "Get Tour Services",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.length > 0) {",
                  "        pm.collectionVariables.set('service_id', jsonData.data[0]._id);",
                  "        console.log('Service ID saved:', jsonData.data[0]._id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/tours/{{tour_id}}/additional-services",
              "host": ["{{base_url}}"],
              "path": ["api", "tours", "{{tour_id}}", "additional-services"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Booking",
      "item": [
        {
          "name": "Calculate Price",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tourId\": \"{{tour_id}}\",\n  \"numberOfPeople\": 1,\n  \"additionalServices\": [\n    {\n      \"serviceId\": \"{{service_id}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"discountCode\": \"\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bookings/calculate-price",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "calculate-price"]
            }
          },
          "response": []
        },
        {
          "name": "Create Booking",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('booking_id', jsonData.data.booking._id);",
                  "    console.log('Booking ID saved:', jsonData.data.booking._id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tourId\": \"{{tour_id}}\",\n  \"startDate\": \"2026-02-17T00:00:00.000Z\",\n  \"numberOfPeople\": 1,\n  \"passengers\": [\n    {\n      \"fullName\": \"Nguyễn Văn A\",\n      \"gender\": \"male\",\n      \"dateOfBirth\": \"1990-01-01T00:00:00.000Z\",\n      \"email\": \"nguyenvana@example.com\",\n      \"phone\": \"0901234567\"\n    }\n  ],\n  \"additionalServices\": [\n    {\n      \"serviceId\": \"{{service_id}}\",\n      \"quantity\": 1\n    }\n  ],\n  \"discountCode\": \"\",\n  \"paymentType\": \"100%\",\n  \"customerInfo\": {\n    \"fullName\": \"Nguyễn Văn A\",\n    \"email\": \"nguyenvana@example.com\",\n    \"phone\": \"0901234567\",\n    \"address\": \"123 Đường ABC, Quận 1, TP.HCM\",\n    \"notes\": \"Vui lòng gọi trước khi đến\"\n  }\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings"]
            }
          },
          "response": []
        },
        {
          "name": "Get Booking Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bookings/{{booking_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "{{booking_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "Get My Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/bookings/my-bookings",
              "host": ["{{base_url}}"],
              "path": ["api", "bookings", "my-bookings"]
            }
          },
          "response": []
        }
      ]
    },
